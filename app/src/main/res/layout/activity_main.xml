<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="40sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2"
        tools:ignore="Rtlcompat"/>
    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2"
        tools:ignore="Rtlcompat"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical"
            android:weightSum="6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bsin"
                        android:text="sin"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/blog"
                        android:text="log"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bln"
                        android:text="ln"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bb1"
                        android:text="("
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bb2"
                        android:text=")"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>


        </LinearLayout>


    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bcos"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bAC"
                        android:text="AC"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bC"
                        android:text="C"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b1x"
                        android:text="1/x"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bdiv"
                        android:text="÷"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btan"
                        android:text="tan"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b7"
                        android:text="7"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b8"
                        android:text="8"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b9"
                        android:text="9"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bmul"
                        android:text="x"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bxfac"
                        android:text="x!"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b4"
                        android:text="4"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b5"
                        android:text="5"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b6"
                        android:text="6"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bminus"
                        android:text="-"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bsqroot"
                        android:text="√"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b1"
                        android:text="1"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b2"
                        android:text="2"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b3"
                        android:text="3"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/badd"
                        android:text="+"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bsquare"
                        android:text="x²"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bpi"
                        android:text="π"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b0"
                        android:text="0"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bdec"
                        android:text="."
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bequal"
                        android:text="="
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:textColor="#ffa580"
                        android:layout_weight="1">
                    </Button>
                </LinearLayout>
            </LinearLayout>

</LinearLayout>
    </LinearLayout>
</LinearLayout>